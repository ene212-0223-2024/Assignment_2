
#include <stdio.h>

int main(void) {
    int pin = 5678, enteredPin, attempts = 0;
    float balance = 1000000.0f, amount;   // 1000000.00 KES initial balance
    int choice;

    // PIN login (max 3 attempts)
    while (attempts < 3) {
        printf("Enter PIN: ");
        scanf("%d", &enteredPin);

        if (enteredPin == pin) {
            printf("Login successful.\n");
            break;
        } else {
            attempts++;
            printf("Wrong PIN. Attempts left: %d\n", 3 - attempts);
        }
    }
    if (attempts == 3) {
        printf("Too many attempts. Exiting.\n");
        return 0;
    }

    // Menu loop
    do {
        printf("\n1. Check Balance\n");
        printf("2. Deposit\n");
        printf("3. Withdraw\n");
        printf("4. Exit\n");
        printf("Choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Balance: KES %.2f\n", balance);
            break;
        case 2:
            printf("Amount to deposit (KES): ");
            scanf("%f", &amount);
            if (amount > 0) {
                balance += amount;
                printf("New balance: KES %.2f\n", balance);
            } else {
                printf("Invalid amount.\n");
            }
            break;
        case 3:
            printf("Amount to withdraw (KES): ");
            scanf("%f", &amount);
            if (amount <= 0) {
                printf("Invalid amount.\n");
            } else if (amount > balance) {
                printf("Insufficient funds. Current balance: KES %.2f\n", balance);
            } else {
                balance -= amount;
                printf("New balance: KES %.2f\n", balance);
            }
            break;
        case 4:
            printf("Goodbye.\n");
            break;
        default:
            printf("Invalid choice.\n");
        }
    } while (choice != 4);

    return 0;
}
